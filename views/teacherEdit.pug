extends layout

block content
    .container.mt-5
        br
        h1.mb-3.mt-5= title
        form(method="POST" action="/teacher/edit/" + teacher._id enctype='multipart/form-data')
            .form-group.mt-2
                label(for='name') Ismi
                input#name.form-control(type='text' name="name" value=(teacher.name))
            .form-group
                label(for='text') Matn kiriting
                input#icon.form-control(type='text' name="text" value=(teacher.text))
            .form-group
                label(for='telegram') Telegram linki
                input#color.form-control(type='text' name="telegram" value=(teacher.telegram))
            .form-group
                label(for='phoneNumber') Telefon raqami
                input#color.form-control(type='text' name="phoneNumber" value=(teacher.phoneNumber))
            .form-group
                label(for='instagram') Instagram manzili linki
                input#color.form-control(type='text' name="instagram" value=(teacher.instagram))
            .form-group
                label(for='imag+e') Rasm
                input#image.form-control(type='file' name="image")
            button.btn.btn-success.m-2(type='submit') O'zgartirish